<% if @friends.any? %>
    <h3 class="text-center">Here are Your Friends</h3>
    <div>
            <ul>
                <% @friends.each do |user| %>
                    <%= render user %>
                    <br>
                    <hr>
                <% end %>                
            </ul>
        <%= button_to "Add Friends", users_path, method: :get, class: "col-md-2 col-md-offset-5 btn-primary"%>
    <br>
    </div>
<% else %>
<div class="row">
<div class="col-md-6 col-md-offset-3">
    <h3 class="text-center">You have no Friends till now, please add Friends</h3>
    <%= button_to "Add Friends", users_path, method: :get, class: "col-md-4 col-md-offset-4 btn-primary"%>
    </div>
    </div>
<% end %>