<ul>
  <h2> Title: &nbsp<%= @post.title %> </h2>
  <p> <%= @post.body %></p>
  <p> Modified Date: &nbsp<%= @post.updated_at %></p>
  <p> Created by: &nbsp<%= @post.user.first_name %></p>
  <div class="row">
    <% if current_user == @post.user %>
        <div class="col-md-1">
            <%= button_to "delete", @post, method: :delete,
                                        data: { confirm: "You sure?" }, class: "btn-danger" %>
        </div>
        <div class="col-md-1">
            <%= button_to "edit", edit_post_path(@post) , method: :get, class: "btn-primary" %>
        </div>
    <% end%>
</ul>